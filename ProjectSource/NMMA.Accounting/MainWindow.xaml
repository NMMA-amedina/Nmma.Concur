<Window x:Class="NMMA.Accounting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NMMA.Accounting"
        mc:Ignorable="d"
        Title="Concur Extract" Height="500" Width="500" HorizontalAlignment="Center" VerticalAlignment="Center" WindowStartupLocation="CenterScreen">
    <Grid Margin="10,10,10,10" Width="460" Height="450">
        <Button x:Name="btnInvoice" Content="Run On-Demand Invoice Extract" HorizontalAlignment="Center" Margin="55,10,55,0" VerticalAlignment="Top" Width="350" Click="btnInvoice_Click" Height="50"/>
        <Button x:Name="btnPayment" Content="Run On-Demand Payment Extract" HorizontalAlignment="Center" Margin="55,80,55,0" VerticalAlignment="Top" Width="350" Click="btnPayment_Click" Height="50"/>
        <Button x:Name="btnReports" Content="Reports" HorizontalAlignment="Center" Margin="55,149,55,0" VerticalAlignment="Top" Width="350" IsEnabled="False" Height="50" Click="btnReports_Click" />
        
    </Grid>
</Window>
